{
  "Description": "Root Stack for AWS Amplify Console",
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "DeploymentBucketName": {
      "Type": "String",
      "Default": "DeploymentBucket",
      "Description": "Name of the common deployment bucket provided by the parent stack"
    },
    "AuthRoleName": {
      "Type": "String",
      "Default": "AuthRoleName",
      "Description": "Name of the common deployment bucket provided by the parent stack"
    },
    "UnauthRoleName": {
      "Type": "String",
      "Default": "UnAuthRoleName",
      "Description": "Name of the common deployment bucket provided by the parent stack"
    }
  },
  "Outputs": {
    "Region": {
      "Description": "CloudFormation provider root stack Region",
      "Value": {
        "Ref": "AWS::Region"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Region"
        }
      }
    },
    "StackName": {
      "Description": "CloudFormation provider root stack ID",
      "Value": {
        "Ref": "AWS::StackName"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-StackName"
        }
      }
    },
    "StackId": {
      "Description": "CloudFormation provider root stack name",
      "Value": {
        "Ref": "AWS::StackId"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-StackId"
        }
      }
    },
    "AuthRoleArn": {
      "Value": {
        "Fn::GetAtt": [
          "AuthRole",
          "Arn"
        ]
      }
    },
    "UnauthRoleArn": {
      "Value": {
        "Fn::GetAtt": [
          "UnauthRole",
          "Arn"
        ]
      }
    },
    "DeploymentBucketName": {
      "Description": "CloudFormation provider root stack deployment bucket name",
      "Value": {
        "Ref": "DeploymentBucketName"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-DeploymentBucketName"
        }
      }
    },
    "AuthRoleName": {
      "Value": {
        "Ref": "AuthRole"
      }
    },
    "UnauthRoleName": {
      "Value": {
        "Ref": "UnauthRole"
      }
    }
  },
  "Resources": {
    "DeploymentBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Ref": "DeploymentBucketName"
        },
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "AES256"
              }
            }
          ]
        }
      },
      "UpdateReplacePolicy": "Retain",
      "DeletionPolicy": "Retain"
    },
    "AuthRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "",
              "Effect": "Deny",
              "Principal": {
                "Federated": "cognito-identity.amazonaws.com"
              },
              "Action": "sts:AssumeRoleWithWebIdentity"
            }
          ]
        },
        "RoleName": {
          "Ref": "AuthRoleName"
        }
      }
    },
    "UnauthRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "",
              "Effect": "Deny",
              "Principal": {
                "Federated": "cognito-identity.amazonaws.com"
              },
              "Action": "sts:AssumeRoleWithWebIdentity"
            }
          ]
        },
        "RoleName": {
          "Ref": "UnauthRoleName"
        }
      }
    },
    "AuthTriggerCustomLambdaStack": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": "https://s3.amazonaws.com/amplify-lyricboost-dev-185348-deployment/amplify-cfn-templates/auth/auth-trigger-cloudformation-template.json",
        "Parameters": {
          "env": "dev",
          "userpoolId": {
            "Fn::GetAtt": [
              "authlyricboostda706c03",
              "Outputs.UserPoolId"
            ]
          },
          "userpoolArn": {
            "Fn::GetAtt": [
              "authlyricboostda706c03",
              "Outputs.UserPoolArn"
            ]
          },
          "functionlyricboostda706c03CustomMessageLambdaExecutionRole": {
            "Fn::GetAtt": [
              "functionlyricboostda706c03CustomMessage",
              "Outputs.LambdaExecutionRoleArn"
            ]
          },
          "functionlyricboostda706c03CustomMessageArn": {
            "Fn::GetAtt": [
              "functionlyricboostda706c03CustomMessage",
              "Outputs.Arn"
            ]
          },
          "functionlyricboostda706c03CustomMessageName": {
            "Fn::GetAtt": [
              "functionlyricboostda706c03CustomMessage",
              "Outputs.Name"
            ]
          }
        }
      },
      "DependsOn": [
        "authlyricboostda706c03",
        "functionlyricboostda706c03CustomMessage"
      ]
    },
    "apilyricboost": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": "https://s3.amazonaws.com/amplify-lyricboost-dev-185348-deployment/amplify-cfn-templates/api/cloudformation-template.json",
        "Parameters": {
          "env": "dev"
        }
      }
    },
    "authlyricboostda706c03": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": "https://s3.amazonaws.com/amplify-lyricboost-dev-185348-deployment/amplify-cfn-templates/auth/lyricboostda706c03-cloudformation-template.json",
        "Parameters": {
          "env": "dev"
        }
      }
    },
    "functionlyricboostda706c03CustomMessage": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": "https://s3.amazonaws.com/amplify-lyricboost-dev-185348-deployment/amplify-cfn-templates/function/lyricboostda706c03CustomMessage-cloudformation-template.json",
        "Parameters": {
          "REDIRECTURL": "",
          "EMAILSUBJECT": "",
          "EMAILMESSAGE": "",
          "deploymentBucketName": "amplify-lyricboost-dev-185348-deployment",
          "s3Key": "amplify-builds/lyricboostda706c03CustomMessage-3950356d676656373636-build.zip",
          "env": "dev"
        }
      }
    }
  }
}